<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/acbuwa_page"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/gray_light" >

    <RelativeLayout
        android:id="@+id/acbuwa_topbar"
        style="@style/topbar_bg"
        android:layout_width="fill_parent"
        android:layout_height="46.0dip" >

        <TextView
            android:id="@+id/topbar_title"
            style="@style/topbar_text"
            android:text="一键拨号" />
    </RelativeLayout>

    <xu.ye.view.ui.SwitchGridView
        android:id="@+id/grid"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/acbuwa_topbar"
        android:gravity="center"
        android:listSelector="@color/transparent"
        android:numColumns="4"
        android:paddingTop="0dip"
        android:stretchMode="columnWidth" >
    </xu.ye.view.ui.SwitchGridView>

    <RelativeLayout
        android:id="@+id/bottomzone"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/grid" >

        <RadioGroup
            android:id="@+id/bottom"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:orientation="horizontal"
            android:weightSum="3" >

            <xu.ye.view.ui.RadioButtonCenter
                android:id="@+id/blackList"
                android:layout_width="match_parent"
                android:layout_height="80dip"
                android:layout_weight="1"
                android:button="@drawable/rd_blacklist_selector"
                android:gravity="bottom" >
            </xu.ye.view.ui.RadioButtonCenter>

            <xu.ye.view.ui.RadioButtonCenter
                android:id="@+id/whiteList"
                android:layout_width="match_parent"
                android:layout_height="80dip"
                android:layout_weight="1"
                android:button="@drawable/rd_whitelist_selector"
                android:gravity="bottom" >
            </xu.ye.view.ui.RadioButtonCenter>

            <xu.ye.view.ui.RadioButtonCenter
                android:id="@+id/allList"
                android:layout_width="match_parent"
                android:layout_height="80dip"
                android:layout_weight="1"
                android:button="@drawable/rd_alllist_selector"
                android:checked="true"
                android:gravity="bottom" >
            </xu.ye.view.ui.RadioButtonCenter>
        </RadioGroup>

        <LinearLayout
            android:id="@+id/ln_layout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/bottom"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/txt1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="都不接"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/txt2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="只想接"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/txt3"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="全部接"
                android:textColor="@color/black" />
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/bottomtrash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dip"
        android:layout_centerHorizontal="true"
        android:background="@drawable/trash0"
        android:contentDescription="@null"
        android:visibility="invisible"/>
    
    <ImageView
        android:id="@+id/bottomtrashanim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dip"
        android:layout_centerHorizontal="true"
        android:background="@anim/trash"
        android:contentDescription="@null"
        android:visibility="invisible"/>

</RelativeLayout>